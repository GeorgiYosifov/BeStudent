@model BeStudent.Web.ViewModels.Course.CourseViewModel
@{
    this.ViewData["Title"] = $"Course {Model.Name}";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">@this.ViewData["Title"]</h1>
    </div>

    <ul class="list-group list-group-flush mt-3">
        @foreach (var semester in Model.Semesters.OrderBy(x => x.Number))
        {
            var remain = (semester.Year % 100) + 1;
            <li class="list-group-item">
                <a class="m-2" asp-controller="Semesters"  asp-action="Details" asp-route-semesterId="@semester.Id">
                    @($"{semester.Year} / {remain} {semester.SemesterType} semester {semester.Number}")
                </a>
            </li>
        }
        <a class="btn btn-secondary m-4 w-25" asp-controller="Semesters" asp-action="Create" asp-route-courseName="@Model.Name" asp-route-courseId="@Model.Id">
            Add
        </a>
    </ul>
</div>