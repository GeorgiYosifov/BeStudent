@model BeStudent.Web.ViewModels.Exam.OnlineTestStartViewModel
@{
    this.ViewData["Title"] = "Start Test";
}

<div class="container">
    <div class="text-center">
        <h2 class="display-4">@this.ViewData["Title"]</h2>
        @if (this.TempData["message"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                @this.TempData["message"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <br />
        <p>Open: @Model.StartTime</p>
        <p>Close: @Model.EndTime</p>
        <p>Duration: @Model.Duration</p>
        <p>Questions: @Model.QuestionsCount</p>
        <a class="btn btn-primary ml-5 w-25" asp-controller="Exams" asp-action="SolveQuestion" asp-route-onlineTestId="@Model.Id" asp-route-questionId="@Model.QuestionId" asp-route-questionNumber="@Model.QuestionNumber">
            Solve Test
        </a>
    </div>
</div>