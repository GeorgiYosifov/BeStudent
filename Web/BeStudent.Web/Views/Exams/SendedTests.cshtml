@model BeStudent.Web.ViewModels.Exam.OnlineTestSendedTestsViewModel
@{
    this.ViewData["Title"] = "List of all sended tests by students";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">@this.ViewData["Title"]</h1>
    </div>

    <ul class="list-group list-group-flush mt-3">
        @foreach (var student in Model.Students)
        {
            <li class="list-group-item text-center">
                <a class="ml-2 w-25" asp-controller="Exams" asp-action="ReviewTest" asp-route-onlineTestId="@Model.Id" asp-route-studentId="@student.Id">
                    @($"Test by {student.FirstName} {student.LastName}")
                </a>
            </li>
        }
    </ul>
</div>