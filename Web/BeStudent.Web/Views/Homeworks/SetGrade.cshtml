@model BeStudent.Web.ViewModels.Grade.GradeSetInputModel
@{
    this.ViewData["Title"] = "Set Grade";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>

<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<div class="container">
    <h1 class="mb-2">@this.ViewData["Title"]</h1>

    <form method="post" asp-action="SetGrade" asp-route-subjectName="@Model.SubjectName" asp-route-homeworkId="@Model.HomeworkId" asp-route-studentId="@Model.StudentId" asp-route-sendFileId="@Model.SendFileId" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Mark"></label>
            <input asp-for="Mark" class="form-control" />
            <span asp-validation-for="Mark" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <br />
        <input type="submit" class="btn btn-primary" />
    </form>
</div>