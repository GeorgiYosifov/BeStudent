@model BeStudent.Web.ViewModels.Homework.HomeworkSendInputModel
@{
    this.ViewData["Title"] = "Send Homework";
}

<div class="container">
    <h1 class="mb-2">@this.ViewData["Title"]</h1>

    <form method="post" asp-action="Send" enctype="multipart/form-data">
        <div>
            <label asp-for="File"></label>
            <input type="file" class="form-control-file" asp-for="File">
        </div>
        <br />
        <div id="fileName" class="form-group">
            <label asp-for="FileDescription"></label>
            <input asp-for="FileDescription" class="form-control" />
            <span asp-validation-for="FileDescription" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-primary" />
    </form>
</div>